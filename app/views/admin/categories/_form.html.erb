<%= form_for [:admin, @category] do |f| %>
  <%= render "shared/error_messages", object: @category %>
  <div class="row">
    <div class="form-group col-md-6">
      <%= f.label t("form.category_name_lable") %>
      <%= f.text_field :name, class: "form-control" %>
    </div>
    <div class="form-group col-md-6">
      <%= f.label t("form.parent_lable") %>
      <%= f.select :parent_id ,show_select_categories, {},
        class: "form-control" %>
    </div>
  </div>
  <div class="row">
    <div class="form-group col-md-6">
      <%= f.submit t("form.submit"), class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
