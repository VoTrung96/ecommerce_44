<%= form_for([:admin, @product], html: {multipart: true}) do |f| %>
  <%= render "shared/error_messages", object: @product %>
  <div class="row">
    <div class="form-group col-md-6">
      <%= f.label t("form.product_name_lable") %>
      <%= f.text_field :name, class: "form-control" %>
    </div>
    <div class="form-group col-md-6">
      <%= f.label t("form.category_lable") %>
      <%= f.select :category_id ,show_select_categories, {},
        class: "form-control" %>
    </div>
    <div class="form-group col-md-6">
      <%= f.label t("form.price_lable") %>
      <%= f.text_field :price, class: "form-control" %>
    </div>
    <div class="form-group col-md-6">
      <%= f.label t("form.quantity_lable") %>
      <%= f.text_field :quantity, class: "form-control" %>
    </div>
    <div class="form-group col-md-12">
      <%= f.label t("form.summary_lable") %>
      <%= f.text_area :summary, class: "form-control", row: "8" %>
    </div>
  </div>
  <div class="row">
    <% if @product.images.present? %>
      <%= render partial: "admin/images/image", collection: @product.images,
        as: :image %>
        <% if @product.images.size < 4 %>
          <% ((@product.images.size)..3).each do |e| %>
            <%= render partial: "input_file", locals: {e: e} %>
          <% end %>
        <% end %>
    <% else %>
      <% (0..3).each do |e| %>
        <%= render partial: "input_file", locals: {e: e} %>
      <% end %>
    <% end %>
  </div>
  <div class="row">
    <div class="form-group col-md-6">
      <%= f.submit t("form.submit"), class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
