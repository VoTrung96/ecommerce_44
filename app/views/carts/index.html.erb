<div class="ps-content pt-80 pb-80">
  <div class="ps-container">
    <div class="ps-cart-listing">
      <table class="table ps-cart__table">
        <thead>
          <tr>
            <th><%= t ".product_name" %></th>
            <th><%= t ".price" %></th>
            <th><%= t ".quantity" %></th>
            <th><%= t ".total" %></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% if @items.present? %>
            <%= render partial: "item_cart", collection: @items, as: :item %>
          <% end %>
        </tbody>
      </table>
      <div class="ps-cart__actions">
        <div class="ps-cart__promotion">
        </div>
        <div class="ps-cart__total">
          <h3><%= t ".grand_total" %>
            <%= raw t "grand_total_price", price: calculate_grand_total %>
          </h3>
          <%= link_to checkout_path, class: "ps-btn" do %>
            <%= t ".checkout" %><i class="ps-icon-next"></i>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
