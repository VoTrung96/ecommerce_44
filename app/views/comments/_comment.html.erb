<div class="ps-review">
  <div class="ps-review__thumbnail">
    <%= image_tag "user/1.jpg" %>
  </div>
  <div class="ps-review__content">
    <header>
      <p><%= link_to comment.user.name, "#" %>
        - <%= time_ago_in_words comment.created_at %> <%= t "products.show.ago" %></p>
    </header>
    <p><%= comment.content %></p>
  </div>
</div>
