<% provide :title, t("users.new.signup") %>
<% provide :btn_text, t("users.new.signup") %>
<div class="ps-contact ps-section pb-80">
  <div class="ps-container">
    <div class="row">
      <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12 col-md-offset-4">
        <div class="ps-section__header mb-50">
          <h2 class="ps-section__title" data-mask="<%= t "users.new.signup" %>">
            <%= t "users.new.signup" %>
          </h2>
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= devise_error_messages! %>
            <div class="row">
              <div class="form-group">
                <%= f.label t("form.name_lable") %>
                <%= f.text_field :name, class: "form-control" %>
              </div>
              <div class="form-group">
                <%= f.label t("form.email_lable") %>
                <%= f.email_field :email, class: "form-control" %>
              </div>
              <div class="form-group">
                <%= f.label t("form.address_lable") %>
                <%= f.text_field :address, class: "form-control" %>
              </div>
              <div class="form-group">
                <%= f.label t("form.phone_lable") %>
                <%= f.telephone_field :phone_number, class: "form-control" %>
              </div>
              <div class="form-group">
                <%= f.label t("form.password_lable") %>
                <%= f.password_field :password, class: "form-control" %>
              </div>
              <div class="form-group">
                <%= f.label t("form.password_confirm_lable") %>
                <%= f.password_field :password_confirmation, class: "form-control" %>
              </div>
              <div class="form-group">
                <%= f.submit yield(:btn_text), class: "ps-btn" %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
