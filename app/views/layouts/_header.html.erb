<header class="header">
  <div class="header__top">
    <div class="container-fluid">
      <div class="row">
        <div class="col-lg-6 col-md-8 col-sm-6 col-xs-12 ">
          <p><%= t "header.address" %></p>
        </div>
        <div class="col-lg-6 col-md-4 col-sm-6 col-xs-12 ">
          <div class="header__actions">
            <% if !logged_in? %>
              <%= link_to t("header.login"), login_path %>
              <%= link_to t("header.register"), signup_path %>
            <% else %>
              <div class="btn-group ps-dropdown">
                <%= link_to "#", class: "dropdown-toggle",
                  :data => {toggle: "dropdown"},
                  :aria => {haspopup: "true", expanded: "false"} do %>
                  <%= t "header.account" %><i class="fa fa-angle-down"></i>
                <% end %>
                <ul class="dropdown-menu">
                  <li><%= link_to t("header.profile"), edit_user_path(current_user) %></li>
                  <li><%= link_to t("header.order"), orders_path %></li>
                  <li><%= link_to t("header.logout"), logout_path, method: :delete %></li>
                </ul>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <nav class="navigation">
    <div class="container-fluid">
      <div class="navigation__column left">
        <div class="header__logo">
          <%= link_to image_tag("logo.png"), root_path, class: "ps-logo" %>
        </div>
      </div>
      <div class="navigation__column center">
        <ul class="main-menu menu">
          <li class="menu-item">
            <%= link_to t("header.home"), root_path %>
          </li>
          <li class="menu-item">
            <%= link_to t("header.shop_now"), products_path %>
          </li>
          <li class="menu-item menu-item-has-children dropdown">
            <%= link_to t("header.shoes"), "" %>
            <ul class="sub-menu">
              <% if @categories.present? %>
                <%= render partial: "categories/sub_category_menu",
                  collection: @categories, as: :category %>
              <% end %>
            </ul>
          </li>
          <li class="menu-item">
            <%= link_to t("header.suggest"), "#" %>
          </li>
          <li class="menu-item">
            <%= link_to t("header.contact"), contact_path %>
          </li>
        </ul>
      </div>
      <div class="navigation__column right">
        <form class="ps-search--header" action="do_action" method="post">
          <input class="form-control" type="text" placeholder="Search Productâ€¦">
          <button><i class="ps-icon-search"></i></button>
        </form>
        <div class="ps-cart">
          <%= link_to carts_path, :class => "ps-cart__toggle simpleCart_total" do %>
            <span><i id="cart_quantity"><%= count_quantity %></i>
            </span><i class="ps-icon-shopping-cart"></i>
          <% end %>
      </div>
    </div>
  </nav>
</header>
<div class="header-services">
  <div class="ps-services owl-slider" data-owl-auto="true" data-owl-loop="true" data-owl-speed="7000" data-owl-gap="0" data-owl-nav="true" data-owl-dots="false" data-owl-item="1" data-owl-item-xs="1" data-owl-item-sm="1" data-owl-item-md="1" data-owl-item-lg="1" data-owl-duration="1000" data-owl-mousedrag="on">
    <p class="ps-service">
      <i class="ps-icon-delivery"></i>
      <%= raw t("header.free_delivery") %>
    </p>
    <p class="ps-service">
      <i class="ps-icon-delivery"></i>
      <%= raw t("header.free_delivery") %>
    </p>
  </div>
</div>
