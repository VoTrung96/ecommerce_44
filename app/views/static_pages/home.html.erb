<%= provide :title, t(".title") %>
<%= render "slider" %>
<div class="ps-section--features-product ps-section masonry-root pt-100 pb-100">
  <div class="ps-container">
    <div class="ps-section__header mb-50">
      <h3 class="ps-section__title" data-mask="<%= t ".features" %>">
        <%= t ".features_products" %>
      </h3>
    </div>
    <div class="ps-section__content pb-50">
      <div class="masonry-wrapper" data-col-md="4" data-col-sm="2" data-col-xs="1" data-gap="30" data-radio="100%">
        <div class="ps-masonry">
          <div class="grid-sizer"></div>
          <% if @features_products.present? %>
            <%= render partial: "products/product_grid",
            collection: @features_products, as: :product %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="ps-section--offer">
  <div class="ps-column">
    <%= link_to image_tag("banner/home-banner-1.png"), "#", class: "ps-offer" %>
  </div>
  <div class="ps-column">
    <%= link_to image_tag("banner/home-banner-2.png"), "#", class: "ps-offer" %>
  </div>
</div>

<div class="ps-section ps-section--top-sales ps-owl-root pt-80 pb-80">
  <div class="ps-container">
    <div class="ps-section__header mb-50">
      <div class="row">
        <div class="col-lg-9 col-md-9 col-sm-12 col-xs-12 ">
          <h3 class="ps-section__title" data-mask="<%= t ".lastest" %>">
            <%= t ".lastest_products" %>
          </h3>
        </div>
        <div class="col-lg-3 col-md-3 col-sm-12 col-xs-12 ">
          <div class="ps-owl-actions">
            <%= link_to "#", class: "ps-prev" do %>
              <i class="ps-icon-arrow-right"></i><%= t ".prev" %>
            <% end %>
            <%= link_to "#", class: "ps-next" do %>
              <%= t ".next" %><i class="ps-icon-arrow-left"></i>
            <% end %>
          </div>
        </div>
      </div>
    </div>
    <div class="ps-section__content">
      <div class="ps-owl--colection owl-slider" data-owl-auto="true" data-owl-loop="true" data-owl-speed="5000" data-owl-gap="30" data-owl-nav="false" data-owl-dots="false" data-owl-item="4" data-owl-item-xs="1" data-owl-item-sm="2" data-owl-item-md="3" data-owl-item-lg="4" data-owl-duration="1000" data-owl-mousedrag="on">
        <% if @lastest_products.present? %>
          <%= render partial: "products/product_carousel",
            collection: @lastest_products, as: :product %>
        <% end %>
    </div>
  </div>
</div>
<div class="ps-home-testimonial bg--parallax pb-80" data-background=image-path("background/parallax.jpg")>
  <div class="container">
    <div class="owl-slider" data-owl-auto="true" data-owl-loop="true" data-owl-speed="5000" data-owl-gap="0" data-owl-nav="false" data-owl-dots="true" data-owl-item="1" data-owl-item-xs="1" data-owl-item-sm="1" data-owl-item-md="1" data-owl-item-lg="1" data-owl-duration="1000" data-owl-mousedrag="on" data-owl-animate-in="fadeIn" data-owl-animate-out="fadeOut">
      <div class="ps-testimonial">
        <div class="ps-testimonial__thumbnail">
          <%= image_tag "user/1.jpg" %><i class="fa fa-quote-left"></i>
       </div>
